<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <link href="../icon/css/fontawesome.css" rel="stylesheet">
   <link href="../icon/css/brands.css" rel="stylesheet">
  <link href="../icon/css/solid.css" rel="stylesheet">
</head>
<body>

<div class="container-fluid">
  <div class="row">
  	<div class="col-md-8 col-md-push-2">
  		<table class="table table-hover">
  			<thead>
  				<tr class="bg-success text-center">
  					<td colspan="6"><a href="add">add product</a> </td>
  				</tr>
  				<tr class="bg-primary">
  					<th>ID</th>
  					<th>name</th>
  					<th>desciption</th>
  					<th>image</th>
  					<th>edit-delete</th>
  					
  				</tr>
  			</thead>
  			<tbody>
  				<% data.rows.forEach(function(item){  %>
  				<tr>
  					<td><%= item.id %></td>
  					<td><%= item.name %></td>
  					<td><%= item.description %></td>
  					<td><img src="../images/<%= item.image %>" ></td>
  					<td><a href="edit/<%= item.id %>"><span class="fa fa-edit">edit</span></a> - <a href="delete/<%= item.id %>"><span class="fa fa-delete">delete</span></a></td>
  				</tr>

  			<% }) %>
  				
  			</tbody>
  			
  		</table>
  	</div>
  </div>
</div>

</body>
</html>